      "item": [
        {
          "name": "Register Reader User",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Generate random user data",
                  "const timestamp = Date.now();",
                  "const randomNum = Math.floor(Math.random() * 10000);",
                  "",
                  "pm.environment.set('readerEmail', `reader_${timestamp}_${randomNum}@test.com`);",
                  "pm.environment.set('readerPassword', `Pass${timestamp}${randomNum}!`);",
                  "pm.environment.set('readerName', `Reader User ${randomNum}`);"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response has token', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('token');",
                  "    pm.expect(jsonData.token).to.be.a('string');",
                  "    ",
                  "    // Save token to environment",
                  "    pm.environment.set('readerToken', jsonData.token);",
                  "});",
                  "",
                  "pm.test('User has READER role', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.user.role).to.equal('READER');",
                  "    ",
                  "    // Save user ID",
                  "    pm.environment.set('readerId', jsonData.user.id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{readerEmail}}\",\n  \"password\": \"{{readerPassword}}\",\n  \"name\": \"{{readerName}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          },
          "response": []
        },
