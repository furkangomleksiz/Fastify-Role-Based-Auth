        {
          "name": "Create Post (Writer)",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Generate random post data",
                  "const timestamp = Date.now();",
                  "const titles = [",
                  "    'Understanding TypeScript Generics',",
                  "    'Building RESTful APIs with Fastify',",
                  "    'Prisma ORM Best Practices',",
                  "    'JWT Authentication Explained',",
                  "    'Role-Based Access Control in Node.js'",
                  "];",
                  "",
                  "const randomTitle = titles[Math.floor(Math.random() * titles.length)] + ` - ${timestamp}`;",
                  "pm.environment.set('postTitle', randomTitle);",
                  "",
                  "const content = `This is a test post created at ${new Date().toISOString()}. ` +",
                  "    `It contains valuable information about modern web development practices. ` +",
                  "    `Lorem ipsum dolor sit amet, consectetur adipiscing elit.`;",
                  "",
                  "pm.environment.set('postContent', content);"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Post created successfully', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.message).to.equal('Post created successfully');",
                  "    pm.expect(jsonData.post).to.have.property('id');",
                  "    ",
                  "    // Save post ID for later tests",
                  "    pm.environment.set('writerPostId', jsonData.post.id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
